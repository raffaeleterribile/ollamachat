<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="OllamaChat.MainPage">

	<Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="20">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="10"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Label Text="Input:" Grid.Row="0" Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center"/>
		<Entry x:Name="Input" Grid.Row="0" Grid.Column="2" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
		<Label Text="Output:" Grid.Row="1" Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center"/>
		<Label x:Name="Output" MaxLines="20" Grid.Row="1" Grid.Column="2" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
		<Button x:Name="Send" Text="Invia" Grid.Row="2" Grid.ColumnSpan="3" HorizontalOptions="FillAndExpand" VerticalOptions="Start" Clicked="Send_Clicked"/>
	</Grid>
	
</ContentPage>
